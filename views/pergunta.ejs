
<%- include('./partials/header.ejs'); %>

<body>
    <%- include ('./partials/navbar.ejs') %>
    <div   class="container">
        <hr>

        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="post">

            <h3>Responda</h3>
            <label>Resposta: </label>
            <textarea name="corpo" class="form-control" placeholder="Digite sua resposta:"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta =>{ %>
            <br>
             <div class="card">
                 <div class="card-body">
                    
                    <%= resposta.corpo %>
                 </div>
             </div>
       <% }) %>
    </div>
   
</body>


<%- include ('./partials/footer.ejs') %>

